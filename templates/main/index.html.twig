{% extends 'base.html.twig' %}

{% block stylesheets %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="css/style.css">

{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close mt-3">
                <span class="icon-close2 js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>
    {% include '/main/header.html.twig' %}
    <div class="container">
        <div class="row mt-5">
            {% for post in posts %}
            <div class="col-sm mt-5">
                <div class="card" style="width: 18rem;">
                    <a href="/post/{{ post.id }}"><img src="{{ post.photo|e }}" class="card-img-top" alt="..."></a>
                    <div class="card-body">
                        <h5 class="card-title">{{ post.heading|e }}</h5>
                        <p class="card-text">{{ post.annotation|e }}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{ post.datecreation|format_datetime(pattern='Y-m-d',locale='en') }}</li>
                        <li class="list-group-item">{{ post.views|e }}  </li>
                        <li class="list-group-item">A third item</li>
                    </ul>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
