{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Heading</th>
                <td>{{ post.heading }}</td>
            </tr>
            <tr>
                <th>Annotation</th>
                <td>{{ post.annotation }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ post.datecreation ? post.datecreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ post.views }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ post.photo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">back to list</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
